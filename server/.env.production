# Production Environment Variables for Backend
# Copy these to your deployment platform (Railway/Render)

# Database - MongoDB Atlas (Production)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/hackideas_prod?retryWrites=true&w=majority

# Redis - Production (get from Redis Cloud or deployment platform)
REDIS_URL=redis://username:password@host:port

# JWT Secrets - GENERATE NEW SECURE KEYS FOR PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32-chars-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Integration
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration (Optional)
EMAIL_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your-sendgrid-api-key

# Application URLs - UPDATE THESE WITH YOUR DEPLOYED URLS
CLIENT_URL=https://your-frontend-domain.vercel.app
SERVER_URL=https://your-backend-domain.railway.app

# Server Configuration
NODE_ENV=production
PORT=5000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-frontend-domain.vercel.app
SESSION_SECRET=your-super-secure-session-secret-production

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
